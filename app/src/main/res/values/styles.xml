<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:background">#14171A</item>
        <item name="android:colorPrimary">#1DA1F2</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="colorPrimary">#1DA1F2</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="colorControlHighlight">#f44336</item>
        <item name="android:background">#14171A</item>
        <item name="colorPrimary">#1DA1F2</item>
        <item name="boxStrokeColor">@color/primary_color</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">#1DA1F2</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="counterText">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>

</resources>
